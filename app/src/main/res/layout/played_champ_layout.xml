<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:alpha="0.8"
    app:cardBackgroundColor="@color/blec"
    android:background="#f2f4f6"
    app:cardMaxElevation="2dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="43041"
            android:layout_margin="2dp"
            app:layout_constraintBottom_toTopOf="@id/champImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/textGri"
            android:textSize="12sp"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"/>

        <TextView
            android:id="@+id/champName"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/textGri"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:text="LeeSin"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/champImage" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/champImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>